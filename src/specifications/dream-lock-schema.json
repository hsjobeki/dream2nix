{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "manifest",
  "type": "object",
  "properties": {

    "sources": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "type": "object",
              "properties": {
                "type": {
                  "enum": [
                    "http",
                    "git",
                    "github",
                    "gitlab",
                    "npm",
                    "path",
                    "pypi-sdist",
                    "crates-io",
                    "unknown"
                  ]
                }
              },
              "allOf": [
                {
                  "if": {
                    "properties": { "type": { "const": "http" } }
                  },
                  "then": {
                    "properties": {
                      "url": { "type": "string" },
                      "hash": { "type": "string" },
                      "type": { "type": "string" },
                      "dir": { "type": "string" }
                    },
                    "required": ["type", "url"],
                    "additionalProperties": false
                  }
                },
                {
                  "if": {
                    "properties": { "type": { "const": "git" } }
                  },
                  "then": {
                    "properties": {
                      "url": { "type": "string" },
                      "rev": { "type": "string" },
                      "ref": { "type": "string" },
                      "submodules": { "type": "boolean" },
                      "hash": { "type": "string" },
                      "type": { "type": "string" },
                      "dir": { "type": "string" }
                    },
                    "required": ["type", "url", "rev"],
                    "additionalProperties": false
                  }
                },
                {
                  "if": {
                    "properties": { "type": { "pattern": "(github)|(gitlab)" } }
                  },
                  "then": {
                    "properties": {
                      "owner": { "type": "string" },
                      "repo": { "type": "string" },
                      "rev": { "type": "string" },
                      "hash": { "type": "string" },
                      "type": { "type": "string" },
                      "dir": { "type": "string" }
                    },
                    "required": ["type", "owner", "repo", "rev"],
                    "additionalProperties": false
                  }
                },
                {
                  "if": {
                    "properties": { "type": { "const": "npm" } }
                  },
                  "then": {
                    "properties": {
                      "hash": { "type": "string" },
                      "type": { "type": "string" },
                      "dir": { "type": "string" }
                    },
                    "required": ["type"],
                    "additionalProperties": false
                  }
                },
                {
                  "if": {
                    "properties": { "type": { "const": "path" } }
                  },
                  "then": {
                    "properties": {
                      "rootName": { "type": ["string", "null"] },
                      "rootVersion": { "type": ["string", "null"] },
                      "path": { "type": "string" },
                      "type": { "type": "string" },
                      "dir": { "type": "string" }
                    },
                    "required": ["type", "path"],
                    "additionalProperties": false
                  }
                },
                {
                  "if": {
                    "properties": { "type": { "const": "pypi-sdist" } }
                  },
                  "then": {
                    "properties": {
                      "hash": { "type": "string" },
                      "type": { "type": "string" },
                      "dir": { "type": "string" }
                    },
                    "required": ["type"],
                    "additionalProperties": false
                  }
                },
                {
                  "if": {
                    "properties": { "type": { "const": "crates-io" } }
                  },
                  "then": {
                    "properties": {
                      "hash": { "type": "string" },
                      "type": { "type": "string" }
                    },
                    "required": ["type"],
                    "additionalProperties": false
                  }
                },
                {
                  "if": {
                    "properties": { "type": { "const": "unknown" } }
                  },
                  "then": {
                    "properties": {
                      "type": { "type": "string" }
                    },
                    "required": ["type"],
                    "additionalProperties": false
                  }
                }
              ]
            }
          }
        }
      }
    },

    "_generic": {
      "type": "object",
      "properties": {
        "defaultPackage": { "type": ["string", "null"] },
        "invalidationHash": { "type": ["string", "null"] },
        "location": { "type": "string" },
        "packages": { "type": "object" },
        "sourcesAggregatedHash":  { "type": ["string", "null"] },
        "subsystem": { "type": "string" },
        "translatorParams":  { "type": ["string", "null"] }
      },
      "additionalProperties": false
    },

    "_subsystem": {
      "description": "build system specifics",
      "type": "object"
    },

    "dependencies": {
      "type": "object",
      "properties": {
        "^.*$": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  },

  "allOf": [
    {
      "if": {
        "properties": { "_generic": { "properties": { "subsystem": { "const": "haskell" } } } }
      },
      "then": {
        "$ref": "subsystems/haskell/dream-lock-schema.json"
      }
    },
    {
      "if": {
        "properties": { "_generic": { "properties": { "subsystem": { "const": "nodejs" } } } }
      },
      "then": {
        "$ref": "subsystems/nodejs/dream-lock-schema.json"
      }
    },
    {
      "if": {
        "properties": { "_generic": { "properties": { "subsystem": { "const": "python" } } } }
      },
      "then": {
        "$ref": "subsystems/python/dream-lock-schema.json"
      }
    },
    {
      "if": {
        "properties": { "_generic": { "properties": { "subsystem": { "const": "rust" } } } }
      },
      "then": {
        "$ref": "subsystems/rust/dream-lock-schema.json"
      }
    }
  ]
}
